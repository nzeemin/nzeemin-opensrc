####### Compiler, tools and options

CC	=	mipsel-linux-gcc
CXX	=	mipsel-linux-g++
STRIP 	=  	mipsel-linux-strip
LINK	=	mipsel-linux-gcc
CFLAGS	=	`sdl-config --cflags`-O3 -pipe -mips32
LFLAGS	=	-lSDL
LIBS	=	`sdl-config --libs`

####### Files

HEADERS =	
SOURCES =	main.c
OBJECTS =	main.o
TARGET	=	ColorLinesSDL.dge
INTERFACE_DECL_PATH = .

####### Implicit rules

.SUFFIXES: .c

.c.o:
	$(CC) -c $(CFLAGS) -o $@ $<

####### Build rules

all: $(TARGET)

$(TARGET): $(UICDECLS) $(OBJECTS) $(OBJMOC) 
	$(LINK) $(LFLAGS) -o $(TARGET) $(OBJECTS) $(OBJMOC) $(LIBS)
	$(STRIP) $(TARGET)

clean:
	-rm -f $(OBJECTS) $(OBJMOC) $(SRCMOC) $(UICIMPLS) $(UICDECLS) $(TARGET)
	-rm -f *~ core

####### Compile

main.o: main.c

